#!/bin/sh

set -e

#TERMINUS_RPM=$(wget --continue --directory-prefix=/tmp -nv https://github.com/Eugeny/terminus/releases/download/v1.0.112/terminus-1.0.112-linux.rpm 2>&1 | cut -d\" -f2)
GITKRAKEN_RPM=$(wget --continue --directory-prefix=/tmp -nv https://release.axocdn.com/linux/gitkraken-amd64.rpm 2>&1 | cut -d\" -f2)
TOOLBOX_TGZ=$(wget --continue --directory-prefix=/tmp -nv https://download-cf.jetbrains.com/toolbox/jetbrains-toolbox-1.17.7275.tar.gz 2>&1 | cut -d\" -f2)
USER_BIN=~/bin

test ! -d $USER_BIN && mkdir $USER_BIN
tar -xzv --strip-components=1 -C /tmp -f $TOOLBOX_TGZ

ssh-keygen -t rsa -b 4096 -N "" -f ~/.ssh/id_rsa

# don't use Wayland (obs does not support Wayland)
sudo sed -e "s/#WaylandEnable/WaylandEnable=false/" /etc/gdm/custom.conf

(/tmp/jetbrains-toolbox &)

# setup vscode repo
sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc
sudo sh -c 'echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" > /etc/yum.repos.d/vscode.repo'

sudo dnf -y install gitk git-gui hub htop screen tmux aria2 kitty jq meld neovim ffmpeg GraphicsMagick gnome-tweak-tool obs-studio xrdp keepassxc podman-compose buildah skopeo toolbox code fira-code-fonts zsh java-11-openjdk-devel putty $GITKRAKEN_RPM

ln -s /usr/bin/nvim /usr/local/bin/vim

dnf -y install https://download1.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm
dnf -y install https://download1.rpmfusion.org/nonfree/fedora/rpmfusion-nonfree-release-$(rpm -E %fedora).noarch.rpm

sudo lchsh $USERNAME <<< $(which zsh)
sudo systemctl enable --now xrdp
sudo firewall-cmd --add-port=3389/tcp --permanent
sudo firewall-cmd --reload

mkdir --parent ~/.config/Code/User
cat <<EOF > ~/.config/Code/User/settings.json
{
    "editor.fontFamily": "'Fira Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": false,
    "editor.formatOnSave": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false
}
EOF

curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh | sh && 
sed -ie "s/^ZSH_THEME=\".*\"/ZSH_THEME=\"avit\"/" ~/.zshrc &&
sed -ie "s/^plugins=\".*\"/plugins=\"(git docker docker-compose)\"/" ~/.zshrc

cat >>~/.zshrc <<EOF

# kitty comes with completion for the kitty command for popular shells like zsh.
autoload -Uz compinit
compinit
# Completion for kitty
kitty + complete setup zsh | source /dev/stdin
EOF

# sed -i -e "s/# font_family.*/font_family      Fira Code Regular/" ~/.config/kitty/kitty.conf
